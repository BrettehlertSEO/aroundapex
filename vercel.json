{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/subscribe.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "VITE_MAILCHIMP_API_KEY": "@mailchimp_api_key",
    "VITE_MAILCHIMP_SERVER_PREFIX": "@mailchimp_server_prefix", 
    "VITE_MAILCHIMP_AUDIENCE_ID": "@mailchimp_audience_id"
  }
}
